<p id="notice"><%= notice %></p>

<h1>Logbooks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @logbooks.each do |logbook| %>
      <tr>
        <td><%= logbook.name %></td>
        <td><%= link_to 'Show', logbook %></td>
        <td><%= link_to 'Edit', edit_logbook_path(logbook) %></td>
        <td><%= link_to 'Destroy', logbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<td><%= link_to 'Pages', logbook_logbook_pages_path(logbook) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Logbook', new_logbook_path %>
